#!/bin/sh /etc/rc.common
# Copyright (C) 2006 OpenWrt.org

START=60
NFS_D=/var/lib/nfs

start() {
	mkdir -p $NFS_D
	touch $NFS_D/rmtab
	
	/usr/sbin/rpc.statd
	/usr/sbin/rpc.lockd
	/usr/sbin/exportfs -r
	/usr/sbin/rpc.nfsd
	/usr/sbin/rpc.mountd
}

stop() {
	killall rpc.mountd 2> /dev/null
	killall -9 nfsd 2> /dev/null
	/usr/sbin/exportfs -au
	killall lockd 2> /dev/null
	killall rpc.statd 2> /dev/null
}

reload() {
	/usr/sbin/exportfs -r
}

